<Window x:Class="TestAppLocalPLayer.PathWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PathWindow" Height="100" Width="512"
        ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="pathTextBox" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0" TextWrapping="Wrap" Text="Set music path" Width="490" Height="23"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Right" Margin="0,5,5,5" VerticalAlignment="Bottom" Width="75" Click="cancelButton_Click"/>
        <Button x:Name="setButton" Content="Set" HorizontalAlignment="Right" Margin="0,5,85,5" VerticalAlignment="Bottom" Width="75" Click="setButton_Click"/>
    </Grid>
</Window>
