        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Please login!" Height="154" Width="344">
    <Grid Margin="0,0,2,1">
        <TextBox x:Name="usernameTextBox" Margin="10,10,10,0" Text="erayan" Height="23" VerticalAlignment="Top"/>
        <PasswordBox x:Name="passwordTextBox" Margin="10,38,10,0" Height="23" VerticalAlignment="Top"/>
