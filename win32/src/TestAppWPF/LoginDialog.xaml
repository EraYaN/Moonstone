        <CheckBox x:Name="rememberCheckBox" Content="Remember Me?" HorizontalAlignment="Left" Margin="10,66,0,31" IsChecked="True" RenderTransformOrigin="0.51,-1.6"/>
        <TextBlock x:Name="stateLogin" HorizontalAlignment="Left" Margin="119,66,0,0" TextWrapping="WrapWithOverflow" Text="" VerticalAlignment="Top" Height="36" Width="125">
           
        </TextBlock>
    </Grid>
