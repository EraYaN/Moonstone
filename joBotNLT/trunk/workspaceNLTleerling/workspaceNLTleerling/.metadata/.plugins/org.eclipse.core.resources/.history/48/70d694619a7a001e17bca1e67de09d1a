/*
 * Created on Aug 13, 2004
 * DriveTestJrBehavior (dip=5) drives the robot in a straight
 * line at various speeds
 */
package javaBot.Nano.Rescue;

import com.muvium.apt.PeriodicTimer;

/**
 * Opdracht 4b - Vooruit rijden
 * Opdracht 4d - Stop na 2 seconden
 * Opdracht 4f - Een bocht maken
 * Opdracht 4i - maak een subroutine
 * Opdracht 4k+ - Gebruik van Case statement 
 * In deze les rijdt de robot 2 seconden vooruit
 * Daarna maakt hij een bocht en kunnen we een patroon volgen
 *
 */

public class DriveBehavior extends Behavior {
	private BaseController joBot;
	private int state = 0;
	private int count = 0;
	int sl = 0;

	public DriveBehavior(BaseController initJoBot,
			PeriodicTimer initServiceTick, int servicePeriod) {
		super(initJoBot, initServiceTick, servicePeriod);
		joBot = initJoBot;
	}

	public void doBehavior() {

		if (state == 0) {
			joBot.drive(50, 50);
			joBot.setStatusLeds(false, false, false); // Turn leds off
		}

		if (state == 1) {
			joBot.drive(0, 0);
		}
	}
}
