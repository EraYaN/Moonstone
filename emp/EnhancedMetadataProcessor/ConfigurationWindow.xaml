<Window x:Class="EMP.ConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuration" Name="configurationWindow" Closing="configurationWindow_Closing" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignWidth="478" SizeToContent="Height" Width="560">
    <Grid Name="ConfigurationGrid">
        <TabControl  HorizontalAlignment="Stretch" Name="ConfigurationTabs" VerticalAlignment="Stretch" Margin="6,6,6,35" ClipToBounds="True" TabStripPlacement="Left">
            
        </TabControl>
        <Button Content="OK" Margin="0,0,6,6" Name="ButtonOK" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="ButtonOK_Click" />
        <Button Content="Cancel" Margin="0,0,87,6" Name="ButtonCancel" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="ButtonCancel_Click" />        
    </Grid>
</Window>
