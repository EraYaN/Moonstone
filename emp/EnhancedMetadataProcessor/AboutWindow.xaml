<Window x:Class="EMP.AboutWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="About" Height="300" Width="300" Name="aboutWindow" Closing="aboutWindow_Closing">
	<Grid>
		<TextBlock Margin="12,12,12,41" Name="TextBlockAbout" Text="This program is supposed to become something awesome." TextWrapping="Wrap" TextTrimming="CharacterEllipsis" FontStretch="ExtraExpanded" />
		<Button Content="Close" Margin="0,0,12,12" Name="ButtonClose" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="ButtonClose_Click" />
	</Grid>
</Window>
